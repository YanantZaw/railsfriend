

<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @frienddbs.each do |frienddb| %>
      <% if frienddb.user == current_user %>
      <tr>
        <td>
          <%= link_to frienddb.first_name+' '+frienddb.last_name, frienddb, class:"btn btn-link" %>
          
        </td>
        <td><%= frienddb.email %></td>
        <td><%= frienddb.phone %></td>
        <td><%= frienddb.twitter %></td>
        
        
        
        <td><%= link_to 'Delete', frienddb, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_frienddb_path, class:"btn btn-primary" %>
<% else %>
  <h1>Hello World</h1>
  This is my first Rails Webpage!
<% end %>
